<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="?attr/listPreferredItemPaddingStart"
    android:layout_marginEnd="?attr/listPreferredItemPaddingEnd"
    android:background="@color/greyBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_credit_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/menu.user.credit.text"
        android:textAppearance="@style/TextAppearance.VutIndex.Label.Bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="36dp"
        android:textAppearance="@style/TextAppearance.VutIndex.Label.Bold"
        android:textSize="48sp"
        tools:text="129 Kč" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_2"
        android:background="@drawable/border_rounded"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_health_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu.user.health.text"
            android:textAppearance="@style/TextAppearance.VutIndex.Label.Bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_health_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.VutIndex.Basic.Bold"
            tools:text="Není podepsáno." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/health_sign_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/menu.user.health.button"
            android:textAppearance="@style/TextAppearance.VutIndex.Label.Bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_3"
        android:text="@string/menu.logout.button.text"
        android:textAppearance="@style/TextAppearance.VutIndex.Label.Bold" />

</androidx.appcompat.widget.LinearLayoutCompat>