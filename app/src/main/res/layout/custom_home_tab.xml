<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tab_button_idle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/spacing_1"
        android:src="@drawable/ic_menu_white_24dp"
        android:tint="@color/textGrey" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tab_button_active"
        style="@style/Widget.MaterialComponents.Button.Navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu.tabbar.title"
        android:textColor="@color/textGeneralWhite"
        app:backgroundTint="@color/tabbarMenuColor"
        app:icon="@drawable/ic_menu_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</RelativeLayout>